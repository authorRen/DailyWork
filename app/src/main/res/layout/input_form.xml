<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="46.5dp"
        android:background="@color/gjj_white"
        android:paddingLeft="@dimen/gjj_credit_item_padding"
        android:paddingRight="@dimen/gjj_credit_item_padding">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/gjj_credit_icon_height"
            android:layout_height="@dimen/gjj_credit_icon_height"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            />

        <EditText
            android:id="@+id/input_edittxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_icon"
            android:background="@color/gjj_white"
            android:gravity="left|center_vertical"
            android:inputType="phone"
            android:paddingLeft="@dimen/gjj_credit_item_padding"
            android:paddingRight="5dp"
            android:text=""
            android:textColor="@color/gjj_text_primary"
            android:textColorHint="@color/gjj_text_second"
            android:textSize="@dimen/gjj_credit_item_size"
            />

        <ImageView
            android:id="@+id/iv_clear_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@mipmap/clear_icon"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            />
    </RelativeLayout>

