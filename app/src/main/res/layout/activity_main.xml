<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.caiyi.dailywork.compant.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_resolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/resolution"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_press"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pressme" />

            <Button
                android:id="@+id/btn_floating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/floating_action_button" />

            <Button
                android:id="@+id/btn_span"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/floating_spannable_String" />

            <Button
                android:id="@+id/btn_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_toolbar" />

            <Button
                android:id="@+id/btn_discovery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发现" />

            <Button
                android:id="@+id/btn_broadcast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发送广播" />

            <Button
                android:id="@+id/btn_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发送通知" />

            <Button
                android:id="@+id/btn_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="轮播图" />

            <Button
                android:id="@+id/btn_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="banner" />

            <Button
                android:id="@+id/btn_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="数字动态增加" />

            <Button
                android:id="@+id/btn_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shape" />

            <Button
                android:id="@+id/btn_glide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="glide" />

            <Button
                android:id="@+id/btn_ExpandableListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ExpandableListView" />

            <Button
                android:id="@+id/btn_Demo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Demo" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
