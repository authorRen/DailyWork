<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.caiyi.dailywork.compant.FloatingActivity"
    android:orientation="vertical"
    >

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="8dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher"
        app:rippleColor="@color/colorPrimaryDark" />

    <com.caiyi.dailywork.ui.customview.FormInputView
        android:id="@+id/name_input"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </com.caiyi.dailywork.ui.customview.FormInputView>

    <com.caiyi.dailywork.ui.customview.FormInputView
        android:id="@+id/card_input"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </com.caiyi.dailywork.ui.customview.FormInputView>

    <TextView
        android:id="@+id/credit_account_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gjj_login_submit_height"
        android:layout_marginBottom="22.5dp"
        android:layout_marginLeft="@dimen/gjj_login_submit_margin"
        android:layout_marginRight="@dimen/gjj_login_submit_margin"
        android:layout_marginTop="22.5dp"
        android:background="@drawable/gjj_login_sendcode_disabled"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/gjj_login_sendcode_disabled_color"
        android:textSize="@dimen/gjj_login_submit_size" />



</LinearLayout>
