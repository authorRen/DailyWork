<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <!--注意当我们使用API版本为22及以上来编译的时候要去掉前缀android:-->
        <item name="windowNoTitle">true</item>
    </style>

    <declare-styleable name="WheelView">
        <attr name="wvAllowCycle" format="boolean"/>
        <attr name="wvNormalColor" format="color"/>
        <attr name="wvActiveColor" format="color"/>
        <attr name="wvTextSize" format="dimension"/>
        <attr name="wvSelOffset" format="dimension"/>
        <attr name="wvItemHeight" format="dimension"/>
        <attr name="wvData" format="reference"/>
    </declare-styleable>

    <style name="weekName">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
